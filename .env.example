# Environment Configuration Template
# Copy this to .env and fill in your actual values

# Application
DEBUG=true
APP_NAME="Koru ATS"
API_VERSION="v1"

# Database (PostgreSQL)
POSTGRES_USER=alethic
POSTGRES_PASSWORD=alethic_dev_password
POSTGRES_DB=alethic_db
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
DATABASE_URL=postgresql+asyncpg://alethic:alethic_dev_password@localhost:5432/alethic_db

# Database Pool Settings
DATABASE_POOL_SIZE=20
DATABASE_MAX_OVERFLOW=10

# Redis (for Celery)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=
REDIS_URL=redis://localhost:6379/0

# AWS S3 Storage
AWS_ACCESS_KEY_ID=your_access_key
AWS_SECRET_ACCESS_KEY=your_secret_key
AWS_REGION=us-east-1
S3_BUCKET_NAME=koru-ats-files
S3_ENDPOINT_URL=

# Google AI
GOOGLE_API_KEY=your_google_api_key
GOOGLE_MODEL=gemini-2.0-flash-exp

# JWT Authentication
JWT_SECRET_KEY=your_super_secret_jwt_key_change_this_in_production
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30
JWT_REFRESH_TOKEN_EXPIRE_DAYS=7

# Email (SMTP)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@example.com
SMTP_PASSWORD=your_email_password
SMTP_FROM_EMAIL=noreply@example.com
SMTP_FROM_NAME="Koru ATS"

# CORS
CORS_ORIGINS=http://localhost:3000,http://localhost:5173

# Webhook Secrets (for verifying inbound webhooks)
GITHUB_WEBHOOK_SECRET=your_github_webhook_secret
LINKEDIN_WEBHOOK_SECRET=your_linkedin_webhook_secret
ZOOM_WEBHOOK_SECRET=your_zoom_webhook_secret

# Feature Flags
ENABLE_EMBEDDINGS=true
ENABLE_AI_SCREENING=true
ENABLE_AUTO_PARSE_RESUMES=true

# Monitoring (optional)
SENTRY_DSN=
LOG_LEVEL=INFO
